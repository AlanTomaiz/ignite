{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
